<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/item_backImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/itembackground" />

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name"
        android:background="@android:color/darker_gray"/>

    <ImageView
        android:id="@+id/icon_border"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:adjustViewBounds="true"
        android:background="@drawable/customborder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name"
        app:layout_constraintWidth_percent=".25"
        app:srcCompat="@mipmap/ic_launcher" />


    <ImageView
        android:id="@+id/icon"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_margin="3dp"
        app:layout_constraintTop_toTopOf="@+id/icon_border"
        app:layout_constraintBottom_toBottomOf="@id/icon_border"
        app:layout_constraintStart_toStartOf="@id/icon_border"
        app:layout_constraintEnd_toEndOf="@id/icon_border"
        />

    <TextView
        android:id="@+id/display_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="TextView"
        android:textColor="@android:color/white"
        android:textSize="22sp"
        app:layout_constraintStart_toEndOf="@+id/icon_border"
        app:layout_constraintTop_toBottomOf="@id/name" />

    <TextView
        android:id="@+id/description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@id/element"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/icon_border"
        app:layout_constraintTop_toBottomOf="@id/display_type" />

    <TextView
        android:id="@+id/light_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="@android:color/white"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ammo_type"
        app:layout_constraintTop_toBottomOf="@id/icon_border" />

    <ImageView
        android:id="@+id/element"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:layout_margin="5dp"
        app:layout_constraintTop_toBottomOf="@id/icon_border"
        app:layout_constraintEnd_toStartOf="@id/ammo_type"
        app:layout_constraintStart_toEndOf="@+id/icon_border"
        app:layout_constraintBottom_toBottomOf="@id/light_level"/>

    <ImageView
        android:id="@+id/ammo_type"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:layout_margin="5dp"
        app:layout_constraintTop_toBottomOf="@id/icon_border"
        app:layout_constraintEnd_toStartOf="@+id/light_level"
        app:layout_constraintStart_toEndOf="@id/element"
        app:layout_constraintBottom_toBottomOf="@id/light_level" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/stats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/element" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/perks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/stats" />

</androidx.constraintlayout.widget.ConstraintLayout>