<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/character_banner"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:layout_marginTop="3dp"
    android:layout_marginBottom="3dp">

    <ImageView
        android:id="@+id/banner_image"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:scaleType="fitCenter" />

    <ImageView
        android:id="@+id/banner_icon"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/banner_class"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/banner_icon"
        android:paddingTop="5dp"
        android:textColor="#ffffffff"
        android:textSize="25sp"
        app:layout_constraintStart_toEndOf="@+id/banner_icon"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/banner_race"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffffff"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@+id/banner_class"
        app:layout_constraintStart_toEndOf="@+id/banner_icon"/>

    <TextView
        android:id="@+id/banner_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffffff"
        android:textSize="15sp"
        android:layout_marginStart="3dp"
        app:layout_constraintTop_toBottomOf="@id/banner_class"
        app:layout_constraintStart_toEndOf="@id/banner_race"/>

    <TextView
        android:id="@+id/banner_lLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingEnd="10dp"
        android:textColor="#bbffff00"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/banner_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="2dp"
        android:paddingEnd="10dp"
        android:textColor="#bbffff00"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/banner_lLevel"/>

</androidx.constraintlayout.widget.ConstraintLayout>